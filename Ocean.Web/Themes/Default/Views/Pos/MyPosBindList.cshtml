                          <li>
                            
                          </li>
                       </ul>       
                      <div class="mappContainer1" style="padding-top: 6px;">
                        <div class="bg_con">
                          @foreach (string vendor in vendors.Split(','))
                          {
                              if (!string.IsNullOrEmpty(vendor))
                              {
                          <div style="text-indent:24px; color:Blue;font-weight:bold;">商户名：@vendor</div>
                          <dl>
