@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="Cache-Control" content="max-age=0">
    <meta name="MobileOptimized" content="240">
    <meta name="apple-touch-fullscreen" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,  minimum-scale=1.0, maximum-scafle=1.0, user-scalable=no">
    <link rel="stylesheet" type="text/css" href="/Content/Images/3g_files/global.css"
        media="all">
    <script type="text/javascript" src="/Content/Images/3g_files/jquery.min.js"></script>
    <script type="text/javascript" src="/Content/Images/3g_files/iscroll.js"></script>
    <script src="/Content/KF/customer/jquery.form.js" type="text/javascript"></script>
    <script src="/Content/KF/customer/RegisterFormSubmit.js" type="text/javascript"></script>
    <script type="text/javascript">
        var myscroll;

        function loaded() {
            myscroll = new iScroll("wrapper");
        }

        window.addEventListener("DOMContentLoaded", loaded, false);

        window.ajaxCallbackFunc = function () {

        }
        $(document).ready(RegisterPageFormSubmit);
    </script>
    <title>@ViewBag.SendUserId</title>
</head>
<body screen_capture_injected="true">
    <noscript>
        你的浏览器不支持或者禁用JavaScript功能。请在设置选项中打开该功能
    </noscript>
    <!--正式页面-->
    <div id="main">
        <div class="header">
            <h1>
                发送"接入"开始聊天，"断开"结束聊天
            </h1>
        </div>
        <div id="wrapper" style="overflow: hidden;">
            <div id="scroller" style="-webkit-transition: -webkit-transform 0ms; -webkit-transform-origin: 0px 0px;
                -webkit-transform: translate3d(0px, 0px, 0);">
                <ul id="contin">
                    <li class="info"></li>
                </ul>
            </div>
        </div>
        <div class="bar">
            <img class="miao" alt="" src="/Content/Images/3g_files/miao.png">
            <form method="post" action="@Html.Raw(Url.Action("SendPrivateMessage", "Client", new { SendUserId = ViewBag.SendUserId}))" name="sendMessageForm" id="sendMessageForm">
            <pre>
<input class="txt" type="text" id="submitMsg" name="messageText" placeholder="在这里输入文字..."
    autocomplete="off" /></pre>
            <input class="btn" type="submit" id="submitbtn" value="发送" />
            </form>
        </div>
    </div>
    <script type="text/javascript">
        window.SendUserId = '@(ViewBag.SendUserId)';
    </script>
    <script src="@Url.Content("~/Content/KF/javascripts/customer.js")" type="text/javascript"></script>
    <script type="text/javascript">
        (function () {
            /**
            注册页面卸载前事件
            **/
            window.onbeforeunload = function () {
                return '确认要退出在线客服系统？';
            };
            //注册关闭后事件
            window.onunload = function () {
                if (!window.globalLock) {
                    $.ajax({
                        type: "POST",
                        url: "/Client/OffLine?SendUserId=@(ViewBag.SendUserId)",
                        data: "",
                        success: function (msg) {

                        }
                    });
                }
            };
        })();
    </script>
    <script src="@Url.Content("~/Content/KF/javascripts/communication.js")" type="text/javascript"></script>
</body>
</html>
