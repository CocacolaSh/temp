@{
    ViewBag.Title = "管理员编辑";
}
@model Ocean.Entity.MpCenter
@section Head{
    <style type="text/css">
        td {
            height: 25px;
            line-height: 25px;
        }
    </style>
}
<div class="easyui-layout" data-options="fit:true">
    <div data-options="region:'center',border:false" style="padding: 10px;">
        <form id="MpCenter-add" action="/MpCenter/_MpEdit" method="post">
            <input type="hidden" name="Id" value="@(Model == null ? "" : Model.Id.ToString())" />
            <table style="width: 100%;">
                <tr>
                    <td style="text-align: right;">公众号名称：
                    </td>
                    <td style="width: 80%;">
                         @Html.TextBoxFor(model=>model.MpName, new Dictionary<string, object>() { {"class", "easyui-validatebox" }, {"data-options", "required:true,validType:'length[1,30]'" } })                       
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right;">公众号原始Id：
                    </td>
                    <td style="width: 80%;">
                        @Html.TextBoxFor(model=>model.OriginID, new Dictionary<string, object>() { {"class", "easyui-validatebox" }, {"data-options", "required:true,validType:'length[1,30]'" } })                       
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right;">AppID：
                    </td>
                    <td style="width: 80%;">
                        @Html.TextBoxFor(model=>model.AppID, new Dictionary<string, object>() { {"class", "easyui-validatebox" }, {"data-options", "required:true,validType:'length[1,50]'" } })                       
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right;">AppSecret：
                    </td>
                    <td style="width: 80%;">
                        @Html.TextBoxFor(model=>model.AppSecret, new Dictionary<string, object>() { {"class", "easyui-validatebox" }, {"data-options", "required:true,validType:'length[1,50]'" } })                       
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right;">Token：
                    </td>
                    <td style="width: 80%;">
                        @Html.TextBoxFor(model=>model.Token, new Dictionary<string, object>() { {"class", "easyui-validatebox" }, {"data-options", "required:true,validType:'length[1,50]'" } })                       
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td>
                        <input type="submit" class="btn" value=" 提 交 " />
                    </td>
                </tr>
            </table>
        </form>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#MpCenter-add').form({
                success: function (data) {
                    data = eval("(" + data + ")");
                    if (data.success) {
                        $.messager.alert('操作成功', data.message, 'info', function () {
                            $('#MpCenter-add').form('clear');
                            parent.CloseAddDialog();
                            parent.ReloadGrid();
                        });
                    } else {
                        $.messager.alert('操作失败', data.message, 'error', function () {

                        });
                    }
                }
            });
        });
    </script>
</div>
