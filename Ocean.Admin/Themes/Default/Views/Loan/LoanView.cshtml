@using Ocean.Framework.Caching.Cache
@using Ocean.Entity.Enums.Loan
@using Ocean.Entity.Enums.TypeIdentifying
@using Ocean.Entity
@using Ocean.Core
@{
    ViewBag.Title = "贷款明细";
    string returnStatus = string.Empty;
    if (Model.ReturnStatus == 1)
    {
        returnStatus = "满意";
    }
    else if (Model.ReturnStatus == 2)
    {
        returnStatus = "一般";
    }
    else if (Model.ReturnStatus == 3)
    {
        returnStatus = "不满意";
    }
}
@model Loan
@section Head{
    <style type="text/css">
        td
        {
            height: 25px;
            line-height: 25px;
        }
    </style>
    <script type="text/javascript">

    </script>
}
<div class="easyui-layout" data-options="fit:true">
    <div data-options="region:'center',border:false" style="padding: 10px;">
        <table style="width: 100%;">
            <tr>
                <td style="text-align: right;">
                    贷款人姓名：
                </td>
                <td style="width: 80%;">
                    @Model.MpUser.Name
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    手机号码：
                </td>
                <td style="width: 80%;">
                    @Model.MpUser.MobilePhone
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    联系地址：
                </td>
                <td style="width: 80%;">
                    @Model.Address
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    申请金额：
                </td>
                <td style="width: 80%;">
                    @Model.ApplyMoney.ToString("0.00")<span>(万)</span>
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    贷款种类：
                </td>
                <td style="width: 80%;">
                    @EnumDataCache.Instance.GetEnumDataName(TypeIdentifyingEnum.LoanCategory, Model.LoanCategoryId.ToString())
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    贷款期限：
                </td>
                <td style="width: 80%;">
                    @EnumDataCache.Instance.GetEnumDataName(TypeIdentifyingEnum.LoanDeadline, Model.DeadlineId.ToString())
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    还款方式：
                </td>
                <td style="width: 80%;">
                    @EnumDataCache.Instance.GetEnumDataName(TypeIdentifyingEnum.RepaymentMode, Model.RepaymentModeId.ToString())
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    担保方式：
                </td>
                <td style="width: 80%;">
                    @EnumDataCache.Instance.GetEnumDataName(TypeIdentifyingEnum.GuaranteeWay, Model.GuaranteeWayId.ToString())
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    资产情况：
                </td>
                <td style="width: 80%;">
                    @ViewBag.AssetSituation
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    撤消日期：
                </td>
                <td style="width: 80%;">
                    @Model.RepealDate
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    申请状态：
                </td>
                <td style="width: 80%;">
                    @(((StatusEnum)Model.Status).Discription())
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    分配状态：
                </td>
                <td style="width: 80%;">
                    @(((AssignStatusEnum)Model.AssignStatus).Discription())
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    分配支行：
                </td>
                <td style="width: 80%;">
                    @Model.AssignSubbranch
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    分配客服经理：
                </td>
                <td style="width: 80%;">
                    @Model.AssignCustomerManager
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    客户经理手机：
                </td>
                <td style="width: 80%;">
                    @Model.CustomerManagerPhone
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    受理状态：
                </td>
                <td style="width: 80%;">
                    @(((ProcessStatusEnum)Model.ProcessStatus).Discription())
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    受理结果：
                </td>
                <td style="width: 80%;">
                    @Model.ProcessResult
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    受理日期：
                </td>
                <td style="width: 80%;">
                    @Model.ProcessDate
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    回访日期：
                </td>
                <td style="width: 80%;">
                    @Model.ReturnVisitDate
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    回访结果：
                </td>
                <td style="width: 80%;">
                    @Model.ReturnVisitResult
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    回访满意度：
                </td>
                <td style="width: 80%;">
                    @returnStatus
                </td>
            </tr>
        </table>
    </div> 
</div>